<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Button style -->
    <style name="App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#6C63FF</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#FCFCFC</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>